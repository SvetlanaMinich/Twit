<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TwitterAnal.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TwitterAnal.UI"
    xmlns:pages="clr-namespace:TwitterAnal.UI.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="TwitterAnal.UI">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Authorization"
        ContentTemplate="{DataTemplate pages:AuthorizationUserPage}"
        Route="AuthorizationUserPage" />
    <ShellContent
        Title="Registration"
        ContentTemplate="{DataTemplate pages:RegistrationPage}"
        Route="RegistrationPage" />
    <ShellContent
        Title="Account Main"
        ContentTemplate="{DataTemplate pages:UserAccountMainPage}"
        Route="UserAccountMainPage" />
    <ShellContent
        Title="Edit Profile"
        ContentTemplate="{DataTemplate pages:EditUserInfoPage}"
        Route="EditUserInfoPage" />
    <ShellContent
        Title="Create Post"
        ContentTemplate="{DataTemplate pages:CreatePostPage}"
        Route="CreatePostPage" />

</Shell>
